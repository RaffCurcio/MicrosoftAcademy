@model IEnumerable<ScuolaMVC.Models.Corso>

@{
    ViewData["Title"] = "Elenco Corsi";
}

<h2>Elenco Corsi</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuovo Corso</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Codice</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var corso in Model)
        {
            <tr>
                <td>@corso.Id</td>
                <td>@corso.Nome</td>
                <td>@corso.CodiceId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@corso.Id" class="btn btn-info btn-sm">Dettagli</a>
                    <a asp-action="Edit" asp-route-id="@corso.Id" class="btn btn-warning btn-sm">Modifica</a>
                    <a asp-action="Delete" asp-route-id="@corso.Id" class="btn btn-danger btn-sm">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
