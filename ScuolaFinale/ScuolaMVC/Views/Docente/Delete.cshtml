@model ScuolaMVC.Models.Docente

@{
    ViewData["Title"] = "Elimina Docente";
}

<h2>Conferma Eliminazione</h2>

<hr />

<div class="alert alert-danger">
    <h4>Sei sicuro di voler eliminare questo docente?</h4>
</div>

<div class="card" style="max-width: 400px;">
    <div class="card-body">
        <h5 class="card-title">@Model.Nome</h5>
        <p class="card-text"><strong>ID:</strong> @Model.Id</p>
        <p class="card-text"><strong>Materia:</strong> @Model.Materia</p>
    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Elimina</button>
        <a asp-action="Index" class="btn btn-secondary">Annulla</a>
    </form>
</div>
