@model ScuolaMVC.Models.Studente

@{
    ViewData["Title"] = "Dettagli Studente";
}

<h2>Dettagli Studente</h2>

<hr />

<div class="card" style="max-width: 400px;">
    <div class="card-body">
        <h5 class="card-title">@Model.Nome @Model.Cognome</h5>
        <p class="card-text"><strong>ID:</strong> @Model.Id</p>
        <p class="card-text"><strong>Nome:</strong> @Model.Nome</p>
        <p class="card-text"><strong>Cognome:</strong> @Model.Cognome</p>
        <p class="card-text"><strong>Matricola:</strong> @Model.Matricola</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifica</a>
    <a asp-action="Index" class="btn btn-secondary">Torna alla lista</a>
</div>
